# Simple runners for GU × π_a demos
PY ?= python

.PHONY: flow-klein flow-sphere flow-saddle flow-all

flow-klein:
	$(PY) examples/gu_manifolds/klein/flow_klein.py

flow-sphere:
	$(PY) examples/gu_manifolds/sphere/flow_sphere.py

flow-saddle:
	$(PY) examples/gu_manifolds/saddle/flow_saddle.py

flow-all: flow-klein flow-sphere flow-saddle
